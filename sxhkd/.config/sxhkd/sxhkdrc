# ⢉⠝ ⠄ ⢀⣸ ⣇⣸ ⡀⢀ ⢀⣀ ⢀⣀   ⢀⣀ ⡀⢀ ⣇⡀ ⡇⡠ ⢀⣸ ⡀⣀ ⢀⣀
# ⠮⠤ ⠇ ⠣⠼ ⠇⠸ ⠣⠼ ⠭⠕ ⠭⠕   ⠭⠕ ⠜⠣ ⠇⠸ ⠏⠢ ⠣⠼ ⠏  ⠣⠤
#
# bspwm hotkeys
#

# Quit bspwm
super + alt + Escape
  killall panel && bspc quit

# Close Window
super + w
  bspc window -c

# Monocle mode
super + t
  bspc desktop -l next

# Balance windows
super + b
  bspc desktop -B

# Floating Mode and Fullscreen Mode on current window
super + {s,f}
  bspc window -t {floating,fullscreen}

# Switch to previous window/desktop
super + {grave,Tab}
  bspc {window,desktop} -f last

# Switch to last window
super + apostrophe
  bspc window -s last

super + {o,i}
  bspc control --record-history off; \
  bspc window {older,newer} -f; \
  bspc control --record-history on

# Make window biggest
super + m
  bspc window -s biggest

# Move windows position
super + {_,shift + }{h,j,k,l}
  bspc window -{f,s} {left,down,up,right}

# Scroll throw windows on desktop
super + {_,shift + }c
  bspc window -f {next,prev}

# Circulate windows
super + {comma,period}
  bspc desktop -C {backward,forward}

# Switch between desktops on monitor
super + bracket{left,right}
  bspc desktop -f {prev,next}

# Preselect side
super + ctrl + {h,j,k,l}
  bspc window -p {left,down,up,right}

# Cancel selection
super + ctrl + {_,shift + }space
  bspc {window -p cancel,desktop -c}

# Enlarge push
super + alt + {h,j,k,l}
  bspc window -e {left -10,down +10,up -10,right +10}

# Enlarge pull
super + alt + shift + {h,j,k,l}
  bspc window -e {right -10,up +10,down -10,left +10}

# Set ratio of split
super + ctrl + {1-9}
  bspc window -r 0.{1-9}

# Move window to certain desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,window -d} ^{1-9,10}

##################
#  Experimental  #
##################

# Rotates my tree
super + r
    bspc desktop -R 90

# Flips leaves horizontally
super + x
    bspc desktop -F horizontal

# Flips leaves vertically
super + y
    bspc desktop -F vertical

super + u
    bspc window --toggle sticky

#
# Media and Audio controls
#

# Toggle Mute
XF86AudioMute
  pulseaudio-ctl mute

# Raise Volume
XF86AudioRaiseVolume
  pulseaudio-ctl up

# Lower Volume
XF86AudioLowerVolume
  pulseaudio-ctl down

# Toggle play and pause
XF86AudioPlay
  echo -n 'p' > ~/.config/pianobar/ctl

# Play next track
XF86AudioNext
  echo -n 'n' > ~/.config/pianobar/ctl

# Adjust brightness
XF86MonBrightness{Up,Down}
    xbacklight {-inc,-dec} 5

#
# wm independent hotkeys
#

super + Return
  konsole -stylesheet ~/.config/konsole.css

super + v
  firefox

super + p
  rofi-pass

super + space
  rofi -show run
  # dmenu_run -b -i -p "open: " -nb "#101112" -nf "#bcc5d1" -sf "#fdfeff" -sb "#383e47" -fn "xft:Fira Mono for Powerline:size=8"

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

